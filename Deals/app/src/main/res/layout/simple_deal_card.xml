<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/standard_spacing"
    android:layout_marginRight="@dimen/standard_spacing">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/standard_spacing"
        android:background="#FFF">

        <ImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingTop="@dimen/standard_spacing"
            android:paddingRight="10dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:background="#EF7203"
            android:padding="8dp"
            android:layout_marginTop="@dimen/standard_spacing"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/image"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/standard_spacing"
            android:layout_toRightOf="@id/image"
            android:layout_below="@id/price"
            android:textColor="#121212"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/merchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard_spacing"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/standard_spacing"
            android:layout_below="@id/title"
            android:layout_alignParentRight="true"
            android:textColor="#CCC"
            android:textSize="@dimen/small_text_size"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>